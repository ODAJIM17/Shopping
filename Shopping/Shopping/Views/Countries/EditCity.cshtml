@model Shopping.ViewModels.CityViewModel
@{
    ViewData["Title"] = "Edit";
}



<h5>Edit City @Model.Name</h5>
<hr />
<div class="row">
    <div class="col-md-6">
        <form asp-action="EditCity">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="StateId" />
           <partial name="_City"/>
            <div class="form-group mt-2">
                <input type="submit" value="Save" class="btn btn-sm btn-primary" />
                <a asp-action="DetailsState" asp-route-id="@Model.StateId" class="btn btn-sm btn-default"><i class="fa-solid fa-recycle text-navy"></i> Back to List</a>
            </div>
        </form>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
