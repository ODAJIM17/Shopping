@model Shopping.Data.Entities.State
@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete @Model.Name?</h3>
<div>
    <partial name ="_stateDetails"/>
    
    <form asp-action="DeleteState">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-sm btn-danger" /> 
        <a asp-action="Details" asp-route-id="@Model.Country.Id" class="btn btn-sm btn-success">Back to List</a>
    </form>
</div>
