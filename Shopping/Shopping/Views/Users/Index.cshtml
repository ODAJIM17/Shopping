@model IEnumerable<Shopping.Data.Entities.User>

@{
    ViewData["Title"] = "Index";
}


<div class="container">
    <div class="card">
        <h5 class="card-header">
            <i class="fa fa-users text-danger"> </i> Users 
              <a asp-action="Create" class="btn btn-sm btn-default offset-10"><i class="fa fa-plus-circle text-navy"></i> Admin</a>
        </h5>
        <div class="card-body">
            <table class="table table-hover table-responsive table-striped smfnt" id="UserTable">
                <thead>
                    <tr>

                        <th>
                            @Html.DisplayNameFor(model => model.Email)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.FullName)
                        </th> 
                        
                        <th>
                            @Html.DisplayNameFor(model => model.City.State.Country.Name)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.City.State.Name)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.City.Name)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Address)
                        </th>
                        <th>
                            Phone
                        </th>
                        <th class="text-center">
                            @Html.DisplayNameFor(model => model.UserType)
                        </th>
                        <th>
                            Confirmed?
                        </th>
                        <th class="text-center">
                            @Html.DisplayNameFor(model => model.ImageFullPath )
                        </th>
                        <th>
                           
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>

                            <td>
                                @Html.DisplayFor(modelItem => item.Email)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.FullName)
                            </td>
                           
                            <td>
                                @Html.DisplayFor(modelItem => item.City.State.Country.Name)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.City.State.Name)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.City.Name)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Address)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.PhoneNumber)
                            </td>
                            <td class="text-center">
                                @Html.DisplayFor(modelItem => item.UserType)
                            </td>
                             <td class="text-center">
                                @if(item.EmailConfirmed == false)
                                {
                                    <span class="badge bg-danger">No</span>
                                }
                                else
                                {
                                   <span class="badge bg-success">Yes</span>
                                }
                              
                            </td>
                            <td>
                                <img src="@item.ImageFullPath" style="width:70px; height:70px; border-radius:50px" />
                            </td>
                            <td></td>
                        </tr>
                    }
                </tbody>
            </table>

        </div>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

<script type="text/javascript">
    $(document).ready(function () {
      
        $('#UserTable').DataTable({
            responsive: true,
            "language": {
                "url": "//cdn.datatables.net/plug-ins/9dcbecd42ad/i18n/English.json"
            },
            "aLengthMenu": [
                [25, 50, 100, 200, -1],
                [25, 50, 100, 200, "All"]
            ]
        });
    });
</script>


}
