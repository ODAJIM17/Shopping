@model IEnumerable<Shopping.Data.Entities.Category>

@{
    ViewData["Title"] = "Index";
}


<div class="container-fluid">
    <div class=card>
        <div class="card-header">
            <i class="fa-solid fa-list text-navy">  Categories List</i>
        </div>
         <div class="card-body">
             <table class="table table-hover table-striped" id="TableCategory" style="width:100%">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th> <a asp-action="Create" class="btn btn-sm btn-default"><i class="fa-solid fa-circle-plus text-danger"></i> Create New</a></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                 <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-default"><i class="fa-solid fa-pen text-warning"></i> Edit</a> 
                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-default"><i class="fa-solid fa-list text-primary"></i> Details</a> 
                <a asp-action="Delete" asp-route-id="@item.Id"class="btn btn-sm btn-default"><i class="fa-solid fa-trash-can text-danger"></i> Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
         </div>
    </div>
</div>



